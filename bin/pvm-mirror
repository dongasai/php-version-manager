#!/usr/bin/env php
<?php

/**
 * PVM 镜像应用
 * 
 * 用于镜像 PVM 项目涉及的所有需要下载的内容
 */

// 定义根目录
define('ROOT_DIR', dirname(__DIR__));

// 包含自动加载器
require ROOT_DIR . '/srcMirror/Autoloader.php';

// 注册自动加载器
Autoloader::register();

// 创建应用程序
$application = new Mirror\Application();

// 运行应用程序
$exitCode = $application->run($argv);

// 退出
exit($exitCode);
